    <script>
        // Dynamic Variable Script
        document.addEventListener('DOMContentLoaded', () => {
            // Get URL parameters
            const urlParams = new URLSearchParams(window.location.search);
            const dmaParam = urlParams.get('dma'); // Look for ?dma=value in URL
            
            // Determine text to display
            // If dmaParam exists, use it. Otherwise default to "Your Area"
            const dmaText = dmaParam ? decodeURIComponent(dmaParam) : "Your Area";
            
            // Find all elements with class 'dma-location' and update text
            const elements = document.querySelectorAll('.dma-location');
            elements.forEach(el => {
                el.textContent = dmaText;
            });

            console.log(`DMA set to: ${dmaText}`);
        });
    </script>

